<!DOCTYPE html>
<html lang="@CultureHelper.GetCurrentLanguage()">
<head>
    <title>@(ViewBag.MetaTitle ?? ViewBag.Title)</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, minimum-scale=1.0">

    <link rel="shortcut icon" href="/favicon.ico">
    <!-- SEO -->
    <meta name="title" content="@Html.Raw(ViewBag.MetaTitle)" />
    <meta name="keywords" content="@Html.Raw(ViewBag.MetaKeywords)">
    <meta name="description" content="@Html.Raw(ViewBag.MetaDescription)">
    <link rel="canonical" href="@ViewBag.Canonical">

    <!-- Facebook Open Graph -->
    <meta property="og:site_name" content="">
    <meta property="og:type" content="@ViewBag.Type">
    <meta property="og:title" content="@Html.Raw(ViewBag.MetaTitle)">
    <meta property="og:description" content="@Html.Raw(ViewBag.MetaDescription)">
    <meta property="og:url" content="@ViewBag.Canonical">
    <meta property="og:image" content="@Html.Raw(ViewBag.MetaImage)">

    <!-- Put css tags here! -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/Content/resources/css/core.min.css">
    <link rel="stylesheet" href="/Content/resources/css/main.min.css">
    @RenderSection("styles", required: false)

	<!-- Global site tag (gtag.js) - Google Analytics -->
	<script async src="https://www.googletagmanager.com/gtag/js?id=UA-170069058-1"></script>
